<body>
    <%- include('../Header/header.ejs') %> 
    <div class="container">

        <div class="card">
            <div class="card-header">
                Edit Category
            </div>
            <div class="card-body"> 
        
                <form action="http://localhost:4000/api/update-single-category/<%-category_data._id%> " method='POST'>
                        <div class="form-group">
                            <label for="catName"> Name:</label>
                            <input type="text" class="form-control" id="catName" name='catName' value="<%-category_data.categoryName%>" > 
                            <input type="hidden"  name='hiddenID'>
                        </div> 
                        <button type="submit" name='submit' class="btn btn-primary">Submit</button>
                </form>
        
            </div>
        </div>  
    </div>
</body>
